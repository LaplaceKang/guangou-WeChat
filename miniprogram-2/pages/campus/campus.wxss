page{
  height: 100%;
  width: 100%;
}

.img1 {
  margin-top: 10rpx;
  display: flex;
  justify-content: center;
}

.container {
  padding: 20rpx 20rpx 0 20rpx;
  line-height: 25px;
  margin-bottom: 45rpx;
}

.but {
  position: fixed;
  width: 100%;
  height: 45rpx;
  bottom: 45rpx;
}

.list-title {
  padding: 20px;
  display: flex;
  justify-content: space-between;
}

.line {
  margin: 0 auto;
  background-color: #272727;
}

.ziti1 {
  font-weight: bold;
  font-size: medium;
}

.ziti2 {
  font-size: small;
}

.color1 {
  background-color: #AE0000;
}

.ziti3 {
  color: red;
  text-align: right;
  padding-right: 30rpx;
}

.classname {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.img {
  width: 80%
}

.nav-bar-wrap {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  height: 330rpx;
}

.nav-bar-item {
  width: 125rpx;
  display: flex;
  flex-direction: column;
  /* align-items: center;
  padding-top: 28rpx; */
}

.allCourtType {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.oneCourtType {
  display: flex;
  flex-direction: column;
  width: 120rpx;
  height: 140rpx;
  align-items: center;
  margin: 20rpx 0 -20rpx 0;
  /* border: 1rpx solid black; */
}

.courtTypeImg {
  padding: 10rpx;
  width: 48rpx;
  height: 48rpx;
  background-color: rgb(232, 232, 232);
  border: 3rpx solid rgb(173, 173, 173);
  border-radius: 50%;
  overflow: hidden;
}

.courtTypeText {
  font-size: 24rpx;
  color: rgb(137, 137, 137)
}

.image {
  width: 746rpx;
}
 
.image-parent {
  height: 20rpx; 
  position: relative;
}
 
.child {
  width: 120px;
  height: 24px;  
  position: relative;
  left: 0;
  top: 120rpx;
  right: 10rpx;
  bottom: 0;
  margin: auto;
  text-align: center;
  background: yellowgreen;
}  

.courttype{
  display: flex;
  flex-direction: row;
