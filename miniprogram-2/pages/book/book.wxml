  <van-tab title="1月13日">
<van-dialog id="van-dialog" />
  </van-tab>
  <van-tab title="1月14日">内容 4</van-tab>
</van-tabs>
 
<view class="container">
  <text class="ziti1">合计：¥40</text>
  <van-button type="primary"  color="black" bindtap="toOrder">确认预定</van-button>
</view>