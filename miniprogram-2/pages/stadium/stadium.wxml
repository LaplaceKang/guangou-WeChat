<!--pages/stadium/stadium.wxml-->
<van-dropdown-menu>
  <van-dropdown-item value="{{ value1 }}" options="{{ option1 }}" />
  <van-dropdown-item value="{{ value2 }}" options="{{ option2 }}" />
  <van-dropdown-item value="{{ value3 }}" options="{{ option3 }}" />
  <van-dropdown-item value="{{ value4 }}" options="{{ option4 }}" />
</van-dropdown-menu>

<view wx:for="{{venue}}" data-index="{{index}}">
  <van-card tag="" desc="\n" thumb="../../../../images/venue/{{item['venuename']}}.jpeg" thumb-mode="aspectFill">
    <view slot="title">
      {{item['venuename']}}
    </view>
    <view slot="tags">
      <text>\n</text>
      <van-tag round type="primary" wx:for="{{item['courttype']}}"> {{item['courttypename']}} </van-tag>
      <!-- <van-tag round type="success"> 篮球 </van-tag> 
          <van-tag round type="danger"> 乒乓球 </van-tag>
          <van-tag round type="warning"> 跆拳道</van-tag>  -->
    </view>
    <view slot="bottom">
      <van-icon name="location" />
      <text>{{item['addressshort']}}</text>
    </view>
    <view slot="footer">
      <text>{{item['distance']}}</text>
      <text wx:if="{{item['lowestprice']}}">\n{{item['lowestprice']}}元起</text>
    </view>
  </van-card>
  <van-divider />
</view>


